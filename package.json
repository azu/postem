{
  "name": "postem",
  "version": "2.2.0",
  "description": "electron app that like tombloo.",
  "keywords": [
    "electron",
    "hatena",
    "twitter"
  ],
  "homepage": "https://github.com/azu/postem",
  "bugs": {
    "url": "https://github.com/azu/postem/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azu/postem.git"
  },
  "license": "MIT",
  "author": "azu",
  "main": "index.js",
  "bin": {
    "postem": "bin/cmd.js"
  },
  "scripts": {
    "build": "NODE_ENV=production gulp build",
    "predist": "npm run build",
    "clean": "rm -rf ./lib ./dist",
    "dist": "npm run clean && npm run build && electron-builder",
    "dist:install": "npm run dist && cp -R dist/mac/Postem.app /Applications/",
    "start": "NODE_ENV=development electron .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "git config --local core.hooksPath .githooks",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:integration": "playwright test",
    "test:integration:ui": "playwright test --ui"
  },
  "dependencies": {
    "@atproto/api": "^0.13.18",
    "@codemirror/commands": "^6.7.0",
    "@codemirror/lang-css": "^6.3.0",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-markdown": "^6.3.0",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/language": "^6.10.0",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/lint": "^6.8.1",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.34.0",
    "@electron/remote": "^2.1.2",
    "@textlint-rule/textlint-rule-no-invalid-control-character": "^3.0.0",
    "@textlint-rule/textlint-rule-no-unmatched-pair": "^2.0.4",
    "@textlint/kernel": "^14.3.0",
    "@textlint/markdown-to-ast": "^14.3.0",
    "@textlint/module-interop": "^14.3.0",
    "@textlint/textlint-plugin-markdown": "^14.3.0",
    "@uiw/react-codemirror": "^4.23.7",
    "asocial-bookmark": "^1.7.1",
    "codemirror": "^6.0.2",
    "codemirror-textlint": "^2.0.2",
    "combokeys": "^2.4.6",
    "electron-authentication-hatena": "^3.0.1",
    "electron-default-menu": "^1.0.2",
    "electron-positioner": "^4.1.0",
    "electron-template-menu": "^1.0.3",
    "electron-window-state": "^5.0.3",
    "express": "^4.15.3",
    "fs-jetpack": "^0.10.3",
    "interop-require": "^1.0.0",
    "js-yaml": "^3.8.4",
    "jsonfile": "^6.1.0",
    "korefile": "^2.1.1",
    "material-flux": "^1.4.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.18.1",
    "node-oauth": "^0.1.3",
    "notie": "^3.9.4",
    "oauth": "^0.9.14",
    "oauth-signature": "^1.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-select": "^5.8.3",
    "scheduler": "^0.26.0",
    "slugg": "^1.2.1",
    "spin.js": "^2.3.2",
    "textlint-rule-ja-unnatural-alphabet": "^2.0.1",
    "textlint-rule-max-ten": "^5.0.0",
    "textlint-rule-no-double-negative-ja": "^2.0.1",
    "textlint-rule-no-doubled-conjunction": "^3.0.0",
    "textlint-rule-no-doubled-conjunctive-particle-ga": "^3.0.0",
    "textlint-rule-no-doubled-joshi": "^3.8.0",
    "textlint-rule-no-mix-dearu-desumasu": "^6.0.3",
    "textlint-rule-no-nfd": "^2.0.2",
    "textlint-rule-proofdict": "2.0.4",
    "textlint-rule-sentence-length": "^5.2.0",
    "tweet-truncator": "^3.0.2",
    "twitter-api-v2": "^1.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/register": "^7.22.5",
    "@playwright/test": "^1.54.1",
    "assert": "^2.0.0",
    "electron": "^24.1.2",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1",
    "events": "^3.1.0",
    "gulp": "^4.0.1",
    "gulp-babel": "^8.0.0",
    "gulp-if": "^2.0.0",
    "lint-staged": "^13.2.2",
    "path-browserify": "^1.0.0",
    "playwright": "^1.54.1",
    "prettier": "^2.8.8",
    "punycode": "^1.4.1",
    "url": "^0.11.0",
    "vitest": "^3.2.4"
  },
  "build": {
    "appId": "info.efcl.postem",
    "productName": "Postem",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "lib/**/*",
      "css/**/*",
      "node_modules/**/*",
      "index.js",
      "package.json"
    ],
    "asar": false,
    "extraResources": [
      {
        "from": "src/services/*/consumer.json",
        "to": "services",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        "zip",
        "dmg"
      ],
      "category": "public.app-category.utilities"
    },
    "npmRebuild": true,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  },
  "email": "azuciao@gmail.com",
  "prettier": {
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  }
}
